<resources>

    <style name="DayNightAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Style for toolbars -->
    <style name="ToolbarTheme">
        <item name="android:background">@color/colorBackgroundHigh</item>
    </style>
    <!-- Style for spinner -->
    <style name="SpinnerTheme">
        <item name="android:background">@color/colorBackgroundHigh</item>
        <item name="android:textColor">@color/colorTextHigh</item>
    </style>
    <!-- Style for bottomview -->
    <style name="BottomViewTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/colorBackgroundHigh</item>
        <item name="android:textColor">@color/colorTextHigh</item>
    </style>
    <!-- Style for Teamrank -->
    <!-- Base style for Teamrank -->
    <style name="TextStyleTeamRank">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextHigh</item>
    </style>
    <!-- Modified style for Ranks -->
    <style name="TextStyleTeamRank.Rank">
        <item name="android:layout_width">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rank_background</item>
    </style>
    <!-- Modified style for Teamrank Teams -->
    <style name="TextStyleTeamRank.Team">
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Modified style for Teamrank Stats -->
    <style name="TextStyleTeamRank.Stats">
        <item name="android:textColor">@color/colorTextMid</item>
        <item name="android:layout_marginStart">45dp</item>
    </style>
    <!-- Modified style for Teamrank Points. -->
    <style name="TextStyleTeamRank.Points">
        <item name="android:layout_width">40dp</item>
        <item name="android:background">@drawable/points_background</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Style for Scorers -->
    <!-- Base style for Scorers -->
    <style name="TextStyleScorers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/colorTextHigh</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- Modified style for Scorers Name -->
    <style name="TextStyleScorers.Name">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Modified style for Scorers Team -->
    <style name="TextStyleScorers.Team">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextMid</item>
    </style>
    <!-- Modified style for Scorers Goals -->
    <style name="TextStyleScorers.Goals">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
    </style>
    <!-- Style for Games Headers -->
    <style name="TextStyleHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextHigh</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <!-- Style for Games -->
    <!-- Base style for Games. -->
    <style name="TextStyleGames">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <!-- Modified style for Teamhome Name -->
    <style name="TextStyleGames.TeamHome">
        <item name="android:textColor">@color/colorTextHigh</item>
    </style>
    <!-- Modified style for TeamAway Name -->
    <style name="TextStyleGames.TeamAway">
        <item name="android:textColor">@color/colorTextMid</item>
    </style>
    <!-- Modified style for TeamHome Goals -->
    <style name="TextStyleGames.TeamHome.Goals">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <!-- Modified style for TeamAway Goals -->
    <style name="TextStyleGames.TeamAway.Goals">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
