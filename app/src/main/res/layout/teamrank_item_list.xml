<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    <TextView
            android:text="1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/teamRank"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="textEnd"/>
    <TextView
            android:text="TeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamName"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/teamRank"
            android:layout_toStartOf="@id/teamPoints"
            android:textSize="16sp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="TeamStat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teamStats"
            android:layout_below="@id/teamName"
            android:layout_toEndOf="@id/teamRank"
            android:layout_toStartOf="@id/teamPoints"
            android:gravity="center_vertical"
            android:layout_margin="1dp"
            android:padding="1dp"/>
    <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamPoints"
            android:textSize="18sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"/>
    <View style="@style/Divider"
          android:layout_below="@id/teamStats"/>
</RelativeLayout>